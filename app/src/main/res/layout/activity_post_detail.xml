<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/android:colorBackground" tools:context=".PostDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.DropZone.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar" android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.DropZone.PopupOverlay"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/detailProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="16dp"
                tools:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/detailPostImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@drawable/image_placeholder_background"
                    android:contentDescription="Item image"
                    tools:src="@drawable/ic_image_placeholder"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailPostTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp"
                        tools:text="Lost ID Card - John Doe"/>

                    <TextView
                        android:id="@+id/detailPostStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/status_lost_background"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        tools:text="Status: Lost"/>

                    <TextView
                        android:id="@+id/detailPostDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp"
                        tools:text="This is a very detailed description of the lost item. It's a blue lanyard with university logo, found near the library entrance. Contains student ID number 12345, please contact if found. The item was last seen on the third floor of the academic building near the computer labs. It might have a small sticker on the back with 'CS101'."/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_category"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Category Icon"/>
                        <TextView
                            android:id="@+id/detailPostCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="?attr/colorOnSurface" tools:text="Category: Electronics"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_on"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Location Icon"/>
                        <TextView
                            android:id="@+id/detailPostLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="?attr/colorOnSurface" tools:text="Location: Near Main Gate"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_account_circle"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Poster Icon"/>
                        <TextView
                            android:id="@+id/detailPostPoster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="?attr/colorOnSurface" tools:text="Posted by: user@example.com"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Timestamp Icon"/>
                        <TextView
                            android:id="@+id/detailPostTimestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurfaceVariant" tools:text="Posted: Jul 22, 2025 at 02:00 PM"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/contactPosterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Poster"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/deletePostButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Post"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>